function GetDate()
start=Year(Now())&"-"

if(Cint(Month(Now())))<10 then start=start+"0" end if
start=start&Month(Now())&"-"
if(Cint(Day(Now())))<10 then start=start+"0" end if
start=start&Day(Now())
GetDate=start
end function


function GetLastMonthDate()
