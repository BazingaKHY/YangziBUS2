while(not rs.eof)
	s="Rows["&x&"]"
	Json(s) = Easp.Json.NewObject
	Json(s&".userid")=rs("userid")
	Json(s&".userpass")=rs("userpass")
	Json(s&".username")=rs("username")
	x=x+1	
	rs.movenext
wend
rs.close
Json("count") = x

